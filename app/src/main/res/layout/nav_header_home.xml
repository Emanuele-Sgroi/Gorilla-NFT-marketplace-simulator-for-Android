<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/nav_bg"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:layout_marginTop="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/app__nav_header_home_user_profile_picture"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/user_profile_temp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/logo_purple"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/app__nav_header_home_username_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:textSize="20sp"
        android:text="username"
        android:textStyle="bold"
        android:textColor="@color/bg_light_grey2"
        android:letterSpacing="0.1"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

</LinearLayout>