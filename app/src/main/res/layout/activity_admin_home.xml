<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light_grey"
    tools:context=".AdminHomeActivity">

    <RelativeLayout
        android:id="@+id/admin_home_top_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/almost_black_text"
        android:elevation="5dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/admin_logout_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:rotation="180"
            android:background="@drawable/logout_icon"
            android:backgroundTint="@color/white"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Admin section"
            android:letterSpacing="0.1"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginEnd="20dp"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/admin_home_logo"
        android:layout_width="360dp"
        android:layout_height="155dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:layout_below="@+id/admin_home_top_bar"
        app:srcCompat="@drawable/logo_text_horiz" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_below="@+id/admin_home_logo">
        <Button
            android:id="@+id/admin_home_listing_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/login_signup_btn"
            android:backgroundTint="@color/white"
            android:text="View listings"
            android:textAllCaps="true"
            android:textColor="@color/almost_black_text"
            android:textSize="22sp"
            android:textStyle="bold"
            android:letterSpacing="0.2"
            android:focusableInTouchMode="true"
            android:elevation="30dp"
            />

        <Button
            android:id="@+id/admin_home_users_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/admin_home_listing_btn"
            android:layout_marginTop="25dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/login_signup_btn"
            android:text="View users"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:letterSpacing="0.2"
            android:focusableInTouchMode="true"
            android:elevation="30dp"
            />

        <Button
            android:id="@+id/admin_home_inquiries_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/admin_home_users_btn"
            android:layout_marginTop="25dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/login_signup_btn"
            android:text="Inquiries"
            android:backgroundTint="@color/white"
            android:textAllCaps="true"
            android:textColor="@color/almost_black_text"
            android:textSize="22sp"
            android:textStyle="bold"
            android:letterSpacing="0.2"
            android:focusableInTouchMode="true"
            android:elevation="30dp"
            />



        <Button
            android:id="@+id/admin_home_add_new_admin_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/admin_home_inquiries_btn"
            android:layout_marginTop="25dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/login_signup_btn"
            android:backgroundTint="@color/almost_black_text"
            android:text="Add new admin"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:letterSpacing="0.2"
            android:focusableInTouchMode="true"
            android:elevation="30dp"
            />
    </RelativeLayout>




</RelativeLayout>