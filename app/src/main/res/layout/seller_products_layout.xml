<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="15dp"
    app:cardElevation="15dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_light_grey">

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:gravity="center"
            android:background="@color/almost_black_text"
            >

            <ImageView
                android:id="@+id/seller_nft_preview"
                android:layout_width="130dp"
                android:layout_height="170dp"
                android:src="@drawable/cry_ape"

                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:gravity="center"
            >

           <LinearLayout
               android:id="@+id/l1"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:gravity="start"
               android:layout_marginTop="5dp"
               android:paddingStart="10dp"
               android:paddingEnd="5dp">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="NFT Name: "
                   android:textStyle="bold"
                   android:textColor="@color/hint_text"
                   android:letterSpacing="0.05"/>

               <TextView
                   android:id="@+id/seller_nft_name"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="God of War"
                   android:textStyle="bold"
                   android:textColor="@color/almost_black_text"
                   android:letterSpacing="0.05"/>

           </LinearLayout>

            <LinearLayout
                android:id="@+id/l2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l1"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category: "
                    android:textStyle="bold"
                    android:textColor="@color/hint_text"
                    android:letterSpacing="0.05"/>

                <TextView
                    android:id="@+id/seller_nft_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gaming"
                    android:textStyle="bold"
                    android:textColor="@color/almost_black_text"
                    android:letterSpacing="0.05"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l2"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date Posted: "
                    android:textStyle="bold"
                    android:textColor="@color/hint_text"
                    android:letterSpacing="0.05"/>

                <TextView
                    android:id="@+id/seller_nft_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10/02/2022"
                    android:textStyle="bold"
                    android:textColor="@color/almost_black_text"
                    android:letterSpacing="0.05"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l3"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address: "
                    android:textStyle="bold"
                    android:textColor="@color/hint_text"
                    android:letterSpacing="0.05"/>

                <TextView
                    android:id="@+id/seller_nft_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0x1fG74Hl01VnxX1"
                    android:textStyle="bold"
                    android:textColor="@color/almost_black_text"
                    android:letterSpacing="0.05"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l4"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price: "
                    android:textStyle="bold"
                    android:textColor="@color/hint_text"
                    android:letterSpacing="0.05"/>

                <TextView
                    android:id="@+id/seller_nft_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.3 ETH"
                    android:textStyle="bold"
                    android:textColor="@color/almost_black_text"
                    android:letterSpacing="0.05"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/l6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line"
                android:backgroundTint="@color/unavailable1"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/l5"/>

            <ImageView
                android:id="@+id/seller_nft_delete"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/delete"
                android:layout_below="@+id/l6"
                android:backgroundTint="@color/error_red2"
                android:layout_marginStart="200dp"
                android:layout_marginTop="10dp"/>

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>