<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light_grey"
    tools:context=".ProductDetailActivity">

    <RelativeLayout
        android:id="@+id/detail_top_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg_light_grey"
        android:elevation="5dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/detail_back_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:rotation="90"
            android:background="@drawable/go_back_arrow"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Buy this NFT"
            android:letterSpacing="0.1"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginEnd="20dp"/>

    </RelativeLayout>


    <ImageView
        android:id="@+id/line_detail"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@drawable/line"
        android:layout_below="@id/detail_top_bar"
        app:tint="@color/unavailable1"/>


    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_detail"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/detail_nft_preview"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/cry_ape"
            />

        <Button
            android:id="@+id/detail_wishlist_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="230dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/unwished"
            android:elevation="30dp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lld1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/rl1"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/detail_nft_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NFT name"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="@color/almost_black_text"
            android:letterSpacing="0.05"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/line_detail2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@drawable/line"
        android:layout_below="@id/lld1"
        android:layout_marginTop="10dp"
        app:tint="@color/unavailable1"/>

    <LinearLayout
        android:id="@+id/lld2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@+id/line_detail2"
        android:paddingStart="15dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/seller_icon"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seller: "
            android:textSize="18dp"
            android:textColor="@color/hint_text"
            android:letterSpacing="0.05"/>
        <TextView
            android:id="@+id/detail_nft_seller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NameSeller"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/almost_black_text"
            android:letterSpacing="0.05"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lld3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@+id/lld2"
        android:paddingStart="15dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/category_icon"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category: "
            android:textSize="18dp"
            android:textColor="@color/hint_text"
            android:letterSpacing="0.05"/>
        <TextView
            android:id="@+id/detail_nft_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/almost_black_text"
            android:letterSpacing="0.05"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lld4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@+id/lld3"
        android:paddingStart="15dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/date"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date Posted: "
            android:textSize="18dp"
            android:textColor="@color/hint_text"
            android:letterSpacing="0.05"/>
        <TextView
            android:id="@+id/detail_nft_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13 12 2022"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/almost_black_text"
            android:letterSpacing="0.05"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lld5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@+id/lld4"
        android:paddingStart="15dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/wallet"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address: "
            android:textSize="18dp"
            android:textColor="@color/hint_text"
            android:letterSpacing="0.05"/>
        <TextView
            android:id="@+id/detail_nft_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0xAhq15Y09FT12LK"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/almost_black_text"
            android:letterSpacing="0.05"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/lld6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/lld5"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/detail_nft_price_eth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.8 ETH"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@color/almost_black_text"
            android:letterSpacing="0.05"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lld7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/lld6"
        android:layout_marginTop="2dp">

        <TextView
            android:id="@+id/detail_nft_price_dollar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4398.54$"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/hint_text"
            android:letterSpacing="0.05"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lld8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/lld7"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="invisible">

        <Button
            android:id="@+id/detail_add_to_cart_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/lld7"
            android:background="@drawable/login_signup_btn"
            android:focusableInTouchMode="true"
            android:letterSpacing="0.2"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="ADD TO CART"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lld9"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_below="@+id/lld7"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lld7"
            android:letterSpacing="0.05"
            android:text="CHECK YOUR CART"
            android:textAllCaps="true"
            android:textColor="@color/logo_purple"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/detail_cart_floating_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        app:srcCompat="@drawable/cart_icon"
        app:backgroundTint="@color/white"
        app:maxImageSize="38dp"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="16dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:id="@+id/detail_cart_quantity"
        android:layout_width="20dp"
        android:layout_height="20dp"
       android:layout_below="@+id/detail_cart_floating_button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="-30dp"
        android:elevation="10dp"
        android:scaleType="center"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:background="@drawable/circle"
        android:gravity="center"
        />


</RelativeLayout>